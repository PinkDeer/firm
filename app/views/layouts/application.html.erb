<!DOCTYPE html>
<html>
  <head>
    <title>Firms</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="col-md-8 col-md-offset-2">

          <a><%= link_to 'Firms', root_path, class: "navbar-brand" %></a>
          <a><%= link_to 'Skills', skills_path, class: "navbar-brand" %></a>

          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'New Firm', new_firm_path, class: "navbar-brand" %></li>
            <li><%= link_to 'New Skill', new_skill_path, class: "navbar-brand" %></li>
          </ul>

          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
