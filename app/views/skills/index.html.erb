<% @skills.each do |skill| %>
  <h2><%= link_to skill.name, skill %></h2>
<% end %>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
    <tr>
      <td><%= skill.name %></td>
      <td><%= skill.parent ? skill.parent.name : '---' %></td>
      <td><%= link_to 'Show', skill %></td>
      <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
      <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
